{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "@types/mocha", "@types/chai"],
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}

